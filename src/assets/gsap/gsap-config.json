{
  "global": {
    "defaults": {
      "duration": 1,
      "ease": "power2.out"
    },
    "registerPlugins": ["ScrollTrigger"],
    "autoInit": true,
    "meta": {
      "version": "1.1",
      "description": "Landing page GSAP configuration"
    },
    "version": 1,
    "status": "published"
  },

  "rules": [
    {
      "id": "heroFadeUp",
      "label": "Hero Fade Up",
      "type": "tween",
      "selector": ".fade-up",
      "from": {
        "opacity": 0,
        "y": 60
      },
      "to": {
        "opacity": 1,
        "y": 0
      },
      "stagger": {
        "each": 0.12
      },
      "scrollTrigger": {
        "enabled": true,
        "start": "top 90%"
      },
      "version": 1,
      "status": "published",
      "media": {
        "type": "video",
        "url": "https://motionbgs.com/media/8810/hollow-knight-echo-of-shadows.960x540.mp4",
        "id": "heroFadeUp",
        "selector": ".fade-up"
      },
      "styles": {
        "background": "#0d47a1",
        "color": "white"
      }
    },

    {
      "id": "stepsTimeline",
      "label": "Landing Steps Timeline",
      "type": "timeline",
      "selector": ".timeline-section",
      "defaults": {
        "duration": 0.9,
        "ease": "power1.out"
      },
      "scrollTrigger": {
        "enabled": true,
        "trigger": ".timeline-section",
        "start": "top 75%",
        "scrub": false,
        "once": true
      },
      "version": 1,
      "status": "published",
      "media": {
        "type": "image",
        "url": "assets/images/bhavesh.jpg",
        "id": "stepsTimeline",
        "selector": ".timeline-section"
      },
      "styles": {},

      "sequence": [
        {
          "selector": ".tl-item-1",
          "from": { "opacity": 0, "y": 50 },
          "to": { "opacity": 1, "y": 0 },
          "order": 1,
          "styles": {
            "background": "#1b5e20",
            "color": "white"
          }
        },
        {
          "selector": ".tl-item-2",
          "from": { "opacity": 0, "y": 50 },
          "to": { "opacity": 1, "y": 0 },
          "order": 2,
          "styles": {
            "background": "#b71c1c",
            "color": "white"
          }
        }
      ],
      "from": {},
      "to": {}
    }
  ],

  "callbacks": [
    {
      "name": "onFadeUpComplete",
      "script": "console.log('Hero section animation complete');"
    }
  ]
}
